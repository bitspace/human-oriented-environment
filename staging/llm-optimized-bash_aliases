# LLM-Optimized Aliases
# Structured output formats for better AI parsing

# Core utilities with structured output
alias ll='eza -la --icons --git'
alias la='eza -a --icons'
alias l='eza --icons'
alias ls='eza --color=auto --icons'

# Git aliases with consistent formatting
alias gs='git status --porcelain=v2'  # Machine-readable git status
alias gst='git status'  # Human-readable fallback
alias gl='git log --oneline -10'
alias gd='git diff'
alias ga='git add'
alias gc='git commit'
alias gp='git push'

# Development aliases with JSON output when possible
alias docker-ps='docker ps --format "table {{.ID}}\t{{.Image}}\t{{.Status}}\t{{.Names}}"'
alias k='kubectl'
alias kgp='kubectl get pods -o wide'
alias kgs='kubectl get services -o wide'

# System information with structured output
alias diskuse='df -h | grep -E "^/dev"'
alias meminfo='free -h'
alias cpuinfo='lscpu | grep -E "Model name|CPU\(s\)|Thread"'

# Package management
alias install='paru -S'
alias search='paru -Ss'
alias update='paru -Syu'
alias remove='paru -Rns'

# Network utilities
alias myip='curl -s ipinfo.io/ip'
alias localip='ip route get 1.1.1.1 | grep -oP "src \K\S+"'

# Directory navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# Safety aliases
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'

# Development environment
alias python='python3'
alias pip='pip3'

# Cloud CLI shortcuts with structured output
alias aws-whoami='aws sts get-caller-identity --output json'
alias gcp-project='gcloud config get-value project'

# LLM tool shortcuts
alias llm-models='llm models list'

# System monitoring for AI analysis
alias sys-summary='echo "CPU: $(grep "cpu " /proc/stat | awk "{usage=(\$2+\$4)*100/(\$2+\$3+\$4+\$5)} END {print usage \"%\"}") | MEM: $(free | grep Mem | awk "{print (\$3/\$2) * 100.0 \"%\"}") | DISK: $(df / | tail -1 | awk "{print \$5}")"'